{
  "name": "ryunosuke/documentize",
  "description": "Parse PHPDOC for PSR-5",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "ryunosuke\\Documentize\\": "src/"
    },
    "files": [
      "src/functions/constants.php",
      "src/functions/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\": "tests/Test/"
    }
  },
  "bin": [
    "bin/documentize"
  ],
  "require": {
    "php": ">=7.1",
    "erusev/parsedown": "1.6.*",
    "symfony/console": "3.*",
    "symfony/process": "3.*"
  },
  "require-dev": {
    "ryunosuke/functions": "1.1.*",
    "seld/phar-utils": "1.0.*",
    "symfony/event-dispatcher": "3.*",
    "symfony/dependency-injection": "3.*",
    "phpunit/phpunit": "6.*"
  },
  "scripts": {
    "build": [
      "@composer export",
      "@composer test",
      "@composer pharize",
      "@composer example"
    ],
    "export": [
      "@php bin/export.php"
    ],
    "test": [
      "vendor/bin/phpunit --configuration=tests/phpunit.xml"
    ],
    "pharize": [
      "@php bin/pharize.php"
    ],
    "example": [
      "@php documentize.phar generate template/example.php docs/example --stats --force --autoload '' --template-config template/config.php",
      "bin/documentize generate vendor/symfony/console/ docs/symfony-console --stats --force --template-config template/config.php -e '/Tests/*'"
    ]
  }
}
